# .htaccess - Next.js 静的エクスポート対応（trailingSlash: true）
RewriteEngine On
RewriteBase /

# 既存のファイルやディレクトリがあればそれを優先
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# /articles/xxxx → /articles/xxxx/index.html にマッピング
RewriteRule ^(.+)/$ $1/index.html [L]
RewriteRule ^(.+)$ $1/index.html [L]

# 404 ページが存在する場合に使う（任意）
ErrorDocument 404 /404.html
